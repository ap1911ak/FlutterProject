// main.dart
import 'package:flutter/material.dart';

void main() => runApp(const App1202());

class App1202 extends StatelessWidget {
  const App1202({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Flutter Navigation Demo', // Added a title for the app
      theme: ThemeData(primarySwatch: Colors.blue), // Added a basic theme
      home: const HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {
  const HomePage({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Navigation')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center, // Center content vertically
          children: [
            const SizedBox(height: 30),
            const Text(
              'Home Page',
              textScaler: TextScaler.linear(2.0),
            ),
            const SizedBox(height: 60),
            btnPage2(context),
            btnPage3(context),
          ],
        ),
      ),
    );
  }
}

Widget btnPage2(BuildContext ctx) => TextButton(
      child: const Text(
        'Go to Page 2 >>',
        textScaler: TextScaler.linear(1.5),
      ),
      onPressed: () => Navigator.push(
        ctx,
        MaterialPageRoute(
          builder: (ctx) => const Page2(id: 789),
        ),
      ),
    );

Widget btnPage3(BuildContext ctx) => TextButton(
      child: const Text(
        'Go to Page 3 >>',
        textScaler: TextScaler.linear(1.5),
      ),
      onPressed: () => Navigator.push(
        ctx,
        MaterialPageRoute(
          builder: (ctx) => const Page3(
            num: 1000000,
            text: 'One Million',
            boolean: true,
          ),
        ),
      ),
    );

// page2.dart (merged)
class Page2 extends StatelessWidget {
  final int id;

  const Page2({super.key, required this.id}); // constructor

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Page2')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center, // Center content vertically
          children: [
            const SizedBox(height: 30),
            Text(
              'Page 2\nProduct id: $id',
              textScaler: TextScaler.linear(1.6),
              textAlign: TextAlign.center, // Center text within the Text widget
            ),
            const SizedBox(height: 60),
            btnBack(context),
            btnPage3_from_Page2(context), // Renamed to avoid conflict with btnPage3 in main.dart
          ],
        ),
      ),
    );
  }


Widget btnBack(BuildContext ctx) => TextButton(
      child: const Text(
        '<< Back',
        textScaler: TextScaler.linear(1.5),
      ),
      onPressed: () => Navigator.pop(ctx),
    );

// Renamed this button to avoid conflict with btnPage3 in main.dart
Widget btnPage3_from_Page2(BuildContext ctx) => TextButton(
      child: const Text(
        'Go to Page 3 >>',
        textScaler: TextScaler.linear(1.5),
      ),
      onPressed: () => Navigator.push(
        ctx,
        MaterialPageRoute(
          builder: (ctx) => const Page3(
            num: 555,
            text: 'hahaha',
            boolean: false,
          ),
        ),
      ),
    );
}
// page3.dart (merged)
class Page3 extends StatelessWidget {
  final int num;
  final String text;
  final bool boolean;

  const Page3({
    super.key,
    required this.num,
    required this.text,
    required this.boolean,
  }); // constructor

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Page3')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center, // Center content vertically
          children: [
            const SizedBox(height: 30),
            Text(
              'Page 3 \n'
              'num: $num\n'
              'text: $text\n'
              'boolean: $boolean', // Interpreted "..." as showing these values
              textScaler: TextScaler.linear(1.6),
              textAlign: TextAlign.center, // Center text within the Text widget
            ),
            const SizedBox(height: 60),
            btnBack(context), // This btnBack is the same as the one in Page2
          ],
        ),
      ),
    );
  }
  Widget btnBack(BuildContext ctx) => TextButton(
    child: Text('<< Back',textScaler:TextScaler.linear(1.6),),
    onPressed: () => Navigator.pop(ctx)
  );
}
